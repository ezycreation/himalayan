<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name='description' content='' />
        <meta name='keywords' content='' />
        <meta http-equiv="content-Type" content="text/html; charset=windows-1252">
        <meta http-equiv="charset" content="ISO-8859-1">
        <meta http-equiv="content-language" content="English">
        <meta http-equiv="VW96.object type" content="Document">
        <meta name="ratings" content="General">
        <meta name="robots" content="index,follow">
        <meta name="revisit-after" content="1 weeks">
        <title>{% block title %}Himalayan Milestone Tours & Travels{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/owl.carousel.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300, 400,400i,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Playball" rel="stylesheet">
    </head>
    <body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <a href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" alt="" class="img-responsive"></a>
                </div>
                <div class="col-lg-5 contact hidden-xs">
                    <i class="glyphicon glyphicon-phone"></i>+91 - 7551058684 /8900545479  <br><i class="glyphicon glyphicon-envelope"></i>himalayanmilestonesikkim@gmail.com
                </div>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 no-gutter">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-1" aria-expanded="false" aria-controls="navbar"> <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar top-bar"></span>
                            <span class="icon-bar middle-bar"></span>
                            <span class="icon-bar bottom-bar"></span>
                        </button>
                    </div>
                    <div id="navbar-1" class="navbar-collapse collapse mainnav">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('home') }}">Home</a></li>
                        {{ render(controller('AppBundle:Front:PagesList')) }}
                        <li class="menu-item dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="">Destination</a>
                            <ul class="dropdown-menu">
                                {{ render(controller('AppBundle:Front:DestinationList')) }}
                                {#<li><a href="#">Sikkim</a> </li>#}
                                {#<li><a href="#">Darjeeling</a> </li>#}
                                {#<li><a href="#">Kalimpong</a> </li>#}
                                {#<li><a href="#">Nepal</a> </li>#}
                                {#<li><a href="#">Bhutan</a> </li>#}
                            </ul>
                        </li>
                        <li class="menu-item dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="">Tour Packages</a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('packages',{'destination': 'Sikkim'}) }}">Sikkim</a></li>
                                <li><a href="{{ path('packages',{'destination': 'Darjeeling'}) }}">Darjeeling</a></li>
                                <li><a href="{{ path('packages',{'destination': 'Kalimpong'}) }}">Kalimpong</a></li>
                                <li><a href="{{ path('packages',{'destination': 'Nepal'}) }}">Nepal</a></li>
                                <li><a href="{{ path('packages',{'destination': 'Bhutan'}) }}">Bhutan</a></li>
                            </ul>
                        </li>
                        {#<li><a href="#">Sikkim</a></li>#}
                        {#<li><a href="#">Darjeeling</a></li>#}
                        {#<li><a href="#">Kalimpong</a></li>#}
                        {#<li><a href="#">Bhutan</a></li>#}
                        <li class="menu-item dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="">Adventure</a>
                            <ul class="dropdown-menu">
                                {{ render(controller('AppBundle:Front:AdventureList')) }}
                            </ul>
                        </li>
                        <li><a href="{{ path('photo_gallery') }}">Photo Gallery</a></li>
                        <li><a href="{{ path('contact_form') }}">Contact</a></li>
                    </ul>
                    </div>
                </div>
            </div>

        </div>
    </nav>
        {% block body %}
        {% endblock %}
    {% block footer %}
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <h5>Address</h5>
                        {{ render(controller('AppBundle:Front:ContactAddress')) }}
                        {#Address - Tadong Near Rahul Tyre<br>#}
                        {#Gangtok - 737101, Sikkim-India.#}
                    </div>
                    <div class="col-lg-2">
                        <h5>Quick Links</h5>
                        <ul>
                            <li><a href="{{ path('home') }}">Home</a> </li>
                            {{ render(controller('AppBundle:Front:PagesList')) }}
                            <li><a href="{{ path('contact_form') }}">Contact us</a></li>
                            <li><a href="{{ path('photo_gallery') }}">Photo Gallery</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2">
                        <h5>Destination</h5>
                        <ul>
                            {{ render(controller('AppBundle:Front:DestinationList')) }}
                        </ul>
                    </div>
                    <div class="col-lg-2">
                        <h5>Adventure</h5>
                        <ul>
                            {{ render(controller('AppBundle:Front:AdventureList')) }}
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <h5>Contact</h5>
                        <i class="fa fa-phone"></i> {{ render(controller('AppBundle:Front:ContactPhone')) }}<br>
                        <i class="fa fa-envelope"></i> {{ render(controller('AppBundle:Front:ContactEmail')) }}

                    </div>
                </div>
            </div>

            <div class="text-center">
                <div class="footer-bottom">
                    &copy; All Right Reserved. Himalayan Milestone Tours & Travels
                </div>
            </div>
        </footer>
    {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
