{% extends '::admin.html.twig' %}

{% block body %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="page-title">
        <h2><span class="fa fa-info-circle"></span> Contact Details</h2>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <strong>Add or Edit Content</strong><br><br>
                    <div>
                        <h5 >
                            {{ form_label(edit_form.phone)}}
                        </h5>
                        <p>
                            {{ form_widget(edit_form.phone, {'attr':{'class': 'form-control'}}) }}
                        </p>
                        <h5 >
                            {{ form_label(edit_form.email)}}
                        </h5>
                        <p>{{ form_widget(edit_form.email, {'attr':{'class': 'form-control'}}) }}</p>
                        <h5>
                            {{ form_label(edit_form.address)}}
                        </h5>
                        <p>
                            {{ form_widget(edit_form.address, {'attr':{'class': 'form-control','rows':'5'}}) }}
                        </p>
                    </div>
                    {#<textarea class="summernote">#}
                    {#</textarea>#}
                    <br>
                    <input type="submit" value="Update" class="btn btn-sm btn-success"/>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
