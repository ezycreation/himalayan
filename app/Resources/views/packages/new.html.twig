{% extends '::admin.html.twig' %}

{% block body %}

    <div class="page-title">
        <h2><span class="fa fa-info-circle"></span> Package</h2>
    </div>

    {{ form_start(form) }}
    <!-- PAGE CONTENT WRAPPER -->
    <div class="page-content-wrap">

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <strong>Add or Edit Content</strong><br><br>
                        <div>
                            <h5 >
                                {{ form_label(form.title)}}
                            </h5>
                            <p>
                                {{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
                            </p>
                            <h5 >
                                Select {{ form_label(form.location)}}
                            </h5>
                            <p>
                                {{ form_widget(form.location, {'attr':{'class': ''}}) }}
                            </p>
                            <h5 >
                                {{ form_label(form.description)}}
                            </h5>
                            <p>{{ form_widget(form.description, {'attr':{'class': ''}}) }}</p>
                            <h5>
                                {{ form_label(form.imageurl)}}
                            </h5>
                            <p>
                                {{ form_widget(form.imageurl, {'attr':{'class': 'btn btn-default btn-file'}}) }}
                            </p>
                        </div>
                        {#<textarea class="summernote">#}
                        {#</textarea>#}
                        <br>
                        <input type="submit" value="Create" class="btn btn-sm btn-success"/>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {{ form_end(form) }}
{% endblock %}
